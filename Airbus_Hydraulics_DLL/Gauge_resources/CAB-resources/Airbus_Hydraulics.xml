	<!--SCREEN TEXT-->
	<!--GREEN HYD-->
	<Element id="GREEN_HYD_PRESSURE">
		<Position X="126" Y="140"/>
		<Text X="125" Y="72" Bright="Yes" Length="100" Font="Arial Black"
			Color="Green" Adjust="Center" VerticalAdjust="Center">
			<String>%((C:AH:GreenHYDPressure))%!4d!</String>
		</Text>
	</Element>
	<Element id="GREEN_HYD_FLUID">
		<Position X="112" Y="168"/>
		<Text X="125" Y="72" Bright="Yes" Length="100" Font="Arial Black"
			Color="Green" Adjust="Center" VerticalAdjust="Center">
			<String>%((C:AH:GreenHYDFluidLevel))%!d!%%</String>
		</Text>
	</Element>

