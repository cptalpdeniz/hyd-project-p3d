	<!--MOUSE AREAS-->
	<Mouse>
		<!--GREEN HYD PUMP-->
		<Area Left="24" Right="170" Top="61" Bottom="87">
			<Tooltip ID="GREEN HYD PUMP TOGGLE"/>
			<Tooltip>GREEN HYD PUMP TOGGLE</Tooltip>
			<Cursor Type="Hand"/>
			<Click Kind="LeftSingle" Repeat="No">!lua
				if (varget("C:AH:GreenHYDEnableSwitch")) == 0 then
				varset("C:AH:GreenHYDEnableSwitch", 1)
				else
				varset("C:AH:GreenHYDEnableSwitch", 0)
				end
			</Click>
		</Area>
